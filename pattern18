     package basics;

public class sum_of_two_nums {
	
	public static void main(String[] args) {
		for(int i=0;i<7;i++) {
			int c=1;
			if(i<4) {
			for(int j=0;j<i+1;j++) {
				System.out.print(c++);
			}
			}else {
					for(int k=0;k< 7-i ;k++) {
						System.out.print(c++);
					}
				}
			
			System.out.println();
		}
	}

}


output:
1
12
123
1234
123
12
1
